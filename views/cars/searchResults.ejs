<% layout('layouts/boilerplate') %>

  <% layout('layouts/boilerplate') %>
    <h1><%= searchResults.length %> results for "<%= query %>"</h1>
    <div class="container mt-4">
      <% if (searchResults.length> 0) { %>
        <div class="row row-cols-1 md-2 g-4">
          <% searchResults.forEach(car=> { %>
            <div class="col">
              <div class="card h-100">
                <a href="/cars/<%= car._id %>"><img src="<%= car.images[0].url %>" class="card-img-top"
                    alt="<%= car.make %> <%= car.model %>"></a>
                <div class="card-body">
                  <h5 class="card-title">
                    <a href="/cars/<%= car._id %>">
                      <%= car.make %>
                        <%= car.model %> (<%= car.year_model %>)
                    </a>
                  </h5>
                  <p class="card-text">Transmission: <%= car.transmission %>
                  </p>
                  <p class="card-text">Driven: <%= car.driven %> miles</p>
                  <div class="card-body text-center">
                    <a href="/cars/<%= car.id %>" class="card-link btn btn-primary">View Details</a>
                </div>
                </div>
              </div>
            </div>
            <% }); %>
        </div>
        <% } else { %>
          <div class="alert alert-warning" role="alert">
            No results found for "<%= query %>".
          </div>
          <% } %>
    </div>
